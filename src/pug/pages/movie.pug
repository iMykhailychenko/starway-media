each item in list

    .card

        h4.card-header=item.title

        .row.m-0.card-body

            .col.pl-0
                img.card-img(src=`${item.img}` alt="")

            .col.px-5.pb-5
                p.card-text=item.overview

                table.table.mb-5

                    tbody

                        tr.row.m-0
                            th.col vote / votes
                            th.col.vote=item.vote

                        tr.row.m-0
                            th.col popularity
                            th.col.popularity=item.popularity

                        tr.row.m-0
                            th.col original title
                            th.col.original_title=item.original_title

                        tr.row.m-0.border-bottom
                            th.col genres
                            th.col.genres=item.genres

                button.btn.btn-primary.previous-page-js(type="button") Go to the previous page