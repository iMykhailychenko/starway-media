    form.row.input-group.m-0(method="post")
        input.search.col.col-9.form-control(type="text" placeholder="Start typing to search movie")

        .input-group-append.col.col-3.p-0
            button.btn.btn-primary.w-100(type="button") Search

    #search-list


.my-5
    h2.h4.text-center Trending movies today


ul.row.m-0.p-0.justify-content-between

    each item in list

        li.col.col-sm-auto.col-12.mb-4.p-0.card.card-list
            img.card-img.card-img-home(src=`${item.img}` alt=`${item.title}`)

            .card-body
                h5.card-title=item.title
                    span.badge.badge-secondary=item.vote

                p.card-text=item.overview
                a.btn.btn-primary.movie-link(href="") Read more


nav#pagination(aria-label="Home page pagination")

    ul.pagination.justify-content-center.my-5

        li.page-item.prev.disabled
            button.page-link.prev-btn(type="button") Previous

        li.page-item.active
            button.page-link.pagination-js(data-page="1" type="button") 1

        li.page-item
            button.page-link.pagination-js(data-page="2" type="button") 2

        li.page-item
            button.page-link.pagination-js(data-page="3" type="button") 3

        li.page-item.next
            button.page-link.next-btn(type="button") Next

form(method="post").pagination-form.input-group.mb-3.justify-content-center

    input.col.col-3.form-control(type="number" name="page" placeholder="Enter page namber")

    .input-group-append
        button.btn.btn-outline-secondary.paggination-go(type="button") Go